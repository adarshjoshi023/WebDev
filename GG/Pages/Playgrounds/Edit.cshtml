@page
@model GG.Pages.Playgrounds.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Playground</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Playground.Id" />
            <div class="form-group">
                <label asp-for="Playground.groundName" class="control-label"></label>
                <input asp-for="Playground.groundName" class="form-control" />
                <span asp-validation-for="Playground.groundName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playground.location" class="control-label"></label>
                <input asp-for="Playground.location" class="form-control" />
                <span asp-validation-for="Playground.location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playground.date" class="control-label"></label>
                <input asp-for="Playground.date" class="form-control" />
                <span asp-validation-for="Playground.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playground.time" class="control-label"></label>
                <input asp-for="Playground.time" class="form-control" />
                <span asp-validation-for="Playground.time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Playground.sportId" class="control-label"></label>
                <select asp-for="Playground.sportId" class="form-control" asp-items="ViewBag.sportId"></select>
                <span asp-validation-for="Playground.sportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
