</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Playground[0].groundName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playground[0].location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playground[0].date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playground[0].time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playground[0].Sport)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Playground) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.groundName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport.id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
